<UserControl x:Class="hayase.Widgets.MediaButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:hayase.Widgets"
             mc:Ignorable="d" d:DesignWidth="447" Height="99">
    <Grid>
        <Button x:Name="prev" Style="{DynamicResource HayaseButtonStyle}" Content="&#x23ee;" HorizontalAlignment="Left" Margin="8,0,0,10" Width="37" FontSize="22" Height="35" VerticalAlignment="Bottom" Click="prev_Click"/>
        <Button x:Name="playpause" Style="{DynamicResource HayaseButtonStyle}" Content="&#x23ef;" HorizontalAlignment="Left" Margin="67,0,0,10" FontSize="22" Height="35" VerticalAlignment="Bottom" Width="38" Click="playpause_Click"/>
        <Button x:Name="next" Style="{DynamicResource HayaseButtonStyle}" Content="&#x23ed;" HorizontalAlignment="Left" Margin="126,0,0,10" FontSize="22" Height="35" VerticalAlignment="Bottom" Width="39" Click="next_Click"/>
        <Label x:Name="songTitle" Content="--" Margin="0,-4,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" FontSize="22"/>
        <Label x:Name="songArtist" Content="--" VerticalAlignment="Top" Foreground="#66FFFFFF" Margin="0,28,0,0"/>

    </Grid>
</UserControl>
